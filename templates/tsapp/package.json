{
  "name": "tspt",
  "version": "1.0.0",
  "description": "Simple TypeScript project template.",
  "main": "src/main.ts",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc",
    "run": "node dist/main",
    "lint": "eslint . --ext .ts",
    "test": "jest",
    "release": "standard-version"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/drawmoon/tspt.git"
  },
  "keywords": [
    "ts",
    "typescript",
    "eslint",
    "template"
  ],
  "author": "drsh",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/drawmoon/tspt/issues"
  },
  "homepage": "https://github.com/drawmoon/tspt#readme",
  "devDependencies": {
    "@types/jest": "^27.5.1",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "eslint": "^8.6.0",
    "jest": "^28.1.0",
    "rimraf": "^3.0.2",
    "standard-version": "^9.5.0",
    "ts-jest": "^28.0.2",
    "typescript": "^4.5.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "testRegex": ".*\\.(spec|test)\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
